<div class="wrapper">
  <div class="inner">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <h4>Payment Gateway Demo</h4>
      <p style="text-align: center">
        Register for E-Commerce websites
      </p>
      <br/><br/>
      <div class="form-holder">
        <span class="lnr lnr-envelope"></span>
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
      </div>
      <div class="form-holder">
        <span class="lnr lnr-name"></span>
        <%= f.text_field :name, autofocus: true, placeholder: "Full name", class: "form-control" %>
      </div>
      <div class="form-holder">
        <span class="lnr lnr-phone-handset"></span>
        <%= f.text_field :phone, autofocus: true, placeholder: "Phone number", class: "form-control" %>
      </div>
      <div class="form-holder">
        <span class="lnr lnr-lock"></span>
        <%= f.password_field :password, autofocus: true, placeholder: "Password", class: "form-control" %>
      </div>
      <div class="form-holder">
        <span class="lnr lnr-lock"></span>
        <%= f.password_field :password, autofocus: true, placeholder: "Confirm password", class: "form-control" %>
      </div>
      <div class="style">
        <%= f.submit "Sign up" , class: "btn btn-primary"%>
      </div>
      <div style="text-align: center">
        <br/>
        <%= link_to "Already have an account? Sign In", login_path %>
      </div>
    <% end %>
  </div>
</div>
